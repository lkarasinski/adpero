{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@adpero/constants": ["libs/constants/src/index.ts"],
            "@adpero/firebase": ["libs/firebase/src/index.ts"],
            "@adpero/functions": ["libs/functions/src/index.ts"],
            "@adpero/hooks": ["libs/hooks/src/index.ts"],
            "@adpero/interfaces": ["libs/interfaces/src/index.ts"],
            "@adpero/themes": ["libs/themes/src/index.ts"],
            "@adpero/ui": ["libs/ui/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
